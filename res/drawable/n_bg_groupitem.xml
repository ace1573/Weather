<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        
        <layer-list>
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#FFF" />

                    <padding android:bottom="1px" android:left="0dp" android:right="0dp" android:top="0dp" />

                    <stroke android:width="1px" android:color="#CCC" />
                </shape></item>
             <item android:drawable="@color/bg_press" />
            </layer-list>
        </item>
    
    
    
    <item>
        <layer-list>
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#FFF" />

                    <padding android:bottom="1px" android:left="0dp" android:right="0dp" android:top="0dp" />

                    <stroke android:width="1px" android:color="#CCC" />
                </shape></item>
            <item><shape xmlns:android="http://schemas.android.com/apk/res/android">
                    <solid android:color="#FFF" />
                </shape></item>
        </layer-list></item>

</selector>